<script>
$(document).ready(function() {
	$("div[rel]").overlay({mask: '#000', effect: 'apple'});
});


$('div.caption').hide();


$('.imagebox').mouseenter(function() {
	var caption_div = $(this).find('div');
	var width = $(this).css('width'); 
	var height = $(this).css('height'); 
	caption_div.show();
	caption_div.css({'width':width, 'height':height});
	
}).mouseleave(function() {
	$(this).find('div').hide();
});



</script>
