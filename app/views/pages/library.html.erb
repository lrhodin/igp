<%= javascript_include_tag :defaults %>

<%= form_tag 'library', :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<%= link_to 'All', 'library' %>
<% @albums.each do |album| %>
  <%= link_to album, 'library?album='.concat(album) %>
<% end %>

<table>
  <caption><h1>Video Library<br><%= @album %></h1></caption>
  <% @videos.each do |video| %>
    <tr>
      <!--<td><iframe src="//player.vimeo.com/video/<%= video.vid %>?title=0&amp;byline=0&amp;portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></td>-->
      <td id="<%=video.vid%>"><img src=<%= video.thumb %> height="281" width="500"></td>
      <td>
        <h2><%= link_to video.name, {:controller => "pages", :action => "video", :vid => video.vid}, :remote => true %><br></h2>
        <%= raw(video.description) %>
      </td>
    </tr>
  <% end %>
</table>
